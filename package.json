{
  "name": "api-base",
  "version": "0.0.0",
  "description": "Boilerplate API structure",
  "scripts": {
    "build": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development yarn server",
    "prod": "yarn clean && yarn build && yarn server:prod",
    "server": "babel-node ./src",
    "server:prod": "node ./dist",
    "start": "yarn prod"
  },
