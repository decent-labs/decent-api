  "author": "Adam Gall <adam@decentlabs.io>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "dotenv": "^8.2.0",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "knex": "^0.19.5",
    "knex-db-manager": "^0.5.0",
    "pg": "^7.12.1",
    "pg-escape": "^0.2.0"
  }
}
